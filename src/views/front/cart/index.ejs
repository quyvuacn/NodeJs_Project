<% if (locals.cart?.length) { %>
    <div class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-table">
                        <table>
                            <thead>
                            <tr>
                                <th>Image</th>
                                <th class="p-name">Product Name</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                <% locals.cart.forEach(product => { %>
                                    <tr>
                                        <td class="cart-pic first-row"><img style="padding: 20px;" src="front/img/products/<%= product.productImages[0].path%> " alt=""></td>
                                        <td class="cart-title first-row">
                                            <h5><%= product.name %> </h5>
                                        </td>
                                        <td class="p-price first-row">$<%= product.discount || product.price %> </td>
                                        <td class="qua-col first-row">
                                            <div class="quantity">
                                                <div class="cart-qty pro-qty">
                                                    <input type="text" value="<%= product.qty %>" class="qty">
                                                    <input type="number" class="product_price" value="<%= product.discount || product.price %>" hidden>
                                                    <input type="number" value="<%= product.id %>"hidden class="product_id">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="total-price first-row">$<%= (product.discount || product.price)*product.qty %> </td>
                                        <td class="close-td first-row"><i class="ti-close"></i></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="cart-buttons">
                                <a href="/shop" class="primary-btn continue-shop">Continue shopping</a>
                                <a class="primary-btn up-cart">Update cart</a>
                            </div>
                            <div class="discount-coupon">
                                <h6>Discount Codes</h6>
                                <form action="#" class="coupon-form">
                                    <input type="text" placeholder="Enter your codes">
                                    <button type="submit" class="site-btn coupon-btn">Apply</button>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-4 offset-lg-4">
                            <div class="proceed-checkout">
                                <ul>
                                    <!-- <li class="subtotal">Subtotal <span>$240.00</span></li> -->
                                    <li class="cart-total">Subtotal <span>$<%= total %> </span></li>
                                </ul>
                                <a href="/checkout" class="proceed-btn">PROCEED TO CHECK OUT</a>
                            </div>
    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="front/js/changQtyCart.js"></script>
<% } else { %>
    <div class="container">
        <div class="row">
            <p style="font-size: 28px;padding: 40px 0">Your cart is empty. <%= notification %> </p>
        </div>
    </div>
<% } %>
 
