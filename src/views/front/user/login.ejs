 <!--Register Section brgin-->
 <div class="register-login-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <div class="login-form">
                    <h2>Login</h2>
                    <% if (notification) { %>
                        <div class="alert alert-success" role="alert">
                            <%= notification %> 
                        </div>
                    <% } %>
                    <% if (error) { %>
                        <div class="alert alert-warning" role="alert">
                            <%= error %> 
                        </div>
                    <% } %>
                    
                    <form action="/login" method="post">
                        <div class="group-input">
                            <label for="username">Email address</label>
                            <input type="text" id="username" name="email" required value="<%= locals.user ? locals.user.email : ''  %> ">
                        </div>
                        <div class="group-input">
                            <label for="password">Password *</label>
                            <input type="password" id="password" name="password" required minlength="8" value="<%= locals.user ? locals.user.password : '' %>">
                        </div>
                        <div class="group-input gi-check">
                            <div class="gi-more">
                                <label for="save-pass">
                                    Save Password
                                    <input type="checkbox" id="save-pass" name="save_pass" value="1">
                                    <span class="checkmark"></span>
                                </label>
                                <a href="#" class="forget-pass">Forget your Password</a>
                            </div>
                        </div>
                        <button type="submit" class="site-btn login-btn">Sign In</button>
                    </form>
                    <div class="switch-login">
                        <a href="/register" class="or-login">Or Create An Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End -->