<div class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <% orders.forEach(order => { %>
                    <div class="col-lg-12">
                        <div class="cart-table">
                            <table>
                                <thead>
                                <tr>
                                    <th>#<%= order.id %> </th>
                                    <th class="p-name">Product Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                    <% order.orderDetails.forEach(orderDetail => { %>
                                        <tr>
                                            <td class="cart-pic first-row"><img style="padding: 20px;" src="img/products/<%= orderDetail.product.productImages[0].path %> " alt=""></td>
                                            <td class="cart-title first-row">
                                                <h5><%= orderDetail.product.name %> </h5>
                                            </td>
                                            <td class="p-price first-row">$<%= orderDetail.product.discount || orderDetail.product.price %> </td>
                                            <td class="qua-col first-row">
                                                <span><%= orderDetail.qty %> </span>
                                            </td>
                                            <td class="total-price first-row">$<%= (orderDetail.product.price ||  orderDetail.product.price) *  orderDetail.qty %></td>
                                        </tr> 
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% }) %>
                
            </div>
        </div>
    </div>