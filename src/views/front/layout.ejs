<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="codelean Template">
    <meta name="keywords" content="codelean, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <base href="/">
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <!-- FontA -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"/>
    <!-- Css Styles -->
    <link rel="stylesheet" href="front/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="front/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="front/css/fontawesome-pro-6.1.0-web/css/all.css">
    <link rel="stylesheet" href="front/css/themify-icons.css" type="text/css">
    <link rel="stylesheet" href="front/css/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="front/css/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="front/css/nice-select.css" type="text/css">
    <link rel="stylesheet" href="front/css/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="front/css/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="front/css/style.css" type="text/css">
    <!-- Jquery -->
    <script src="front/js/jquery-3.3.1.min.js"></script>
    <script src="front/js/jquery-ui.min.js"></script>
    <script src="front/js/jquery.countdown.min.js"></script>
    <script src="front/js/jquery.nice-select.min.js"></script>
    <script src="front/js/jquery.zoom.min.js"></script>
    <script src="front/js/jquery.dd.min.js"></script>
    <script src="front/js/jquery.slicknav.js"></script>
    <!-- Format Date Jquery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-dateFormat/1.0/jquery.dateFormat.min.js"></script>
    

</head>

<body>
    <!-- Start coding here -->

    <!-- page preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>
    <!-- End -->


    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="header-top">
            <div class="container">
                <div class="ht-left">
                    <div class="mail-service">
                        <i class="fa fa-envelope"></i>
                        vuvietquyacn@gmail.com
                    </div>
                    <div class="phone-service">
                        <i class="fa fa-phone"></i>
                        +84 32.64.59.773
                    </div>
                </div>
                <div class="ht-right">
                    <% if (!locals.user) { %>
                        <a href="/login" class="login-panel"><i class="fa fa-user"></i>Login</a> 
                    <% } else { %>
                        <a href="/logout" class="login-panel"><i class="fa fa-user"></i><%= locals.user.name %> -  Logout </a> 
                    <% } %>
                                 
                    <div class="lan-selector">
                        <select class="language_drop" name="countries" id="countries" style="width: 300px;">
                            <option value="yt" data-image="front/img/flag-1.jpg" data-imagecss="flag yt" data-title="English">English</option>
                            <option value="yu" data-image="front/img/flag-2.jpg" data-imagecss="flag yu" data-title="Bangladesh">German</option>

                        </select>
                    </div>
                    <div class="top-social">
                        <a href="#"><i class="ti-facebook"></i></a>
                        <a href="#"><i class="ti-twitter-alt"></i></a>
                        <a href="#"><i class="ti-linkedin"></i></a>
                        <a href="#"><i class="ti-pinterest"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="inner-header">
                <div class="row">
                    <div class="col-lg-2 col-md-2">
                        <div class="logo">
                            <a href="/">
                                <img src="front/img/logo.png" height="25" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-7">
                        <div class="advanced-search">
                            <button type="button" class="category-btn">All Categories</button>
                            <div class="input-group">
                                <form style="width:100%" action="/shop">
                                    <input name="search" type="text" placeholder="What do you need?" value="<%= locals.request.query?.search || '' %>">
                                    <button type="submit"><i class="ti-search"></i></button>
                                </form> 
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3">
                        <ul class="nav-right">
                            <li class="cart-icon">
                                <a href="/cart">
                                    <i class="fa-light fa-cart-shopping"></i>
                                    <span><%= locals.cart?.length || 0 %> </span>
                                </a>
                                <div class="cart-hover">
                                    <div class="select-items">
                                        <table>
                                            <tbody>
                                                <% locals.cart?.forEach(product => { %>
                                                    <tr>
                                                        <td class="si-pic"><img width="60" src="front/img/products/<%= product.productImages[0].path %> " alt=""></td>
                                                        <td class="si-text">
                                                            <div class="product-selected">
                                                                <p>$<%= product.discount||product.price %>  x 1</p>
                                                                <h6><%= product.name %> </h6>
                                                            </div>
                                                        </td>
                                                        <td class="si-close">
                                                            
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="select-total">
                                        <span>total:</span>
                                        <h5>$<%= total %> </h5>
                                    </div>
                                    <div class="select-button">
                                        <a href="/cart" class="primary-btn view-card">VIEW CARD</a>
                                        <a href="/checkout" class="primary-btn ckeckout-btn">CHECK OUT</a>
                                    </div>
                                </div>
                            </li>
                            <li class="cart-price">$<%= total %> </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="nav-item">
            <div class="container">
                <div class="nav-depart">
                    <div class="depart-btn">
                        <i class="ti-menu"></i>
                        <span >All deparments</span>
                        <ul class="depart-hover">
                            <% locals.categories.forEach(category => { %>
                                <li><a href="/shop/<%= category.name %> "><%= category.name %> Clothing</a></li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
                <nav class="nav-menu mobile-menu">
                    <ul>
                        <li class="<%= locals.request.path[1] == '' ? 'active' : '' %>"><a href="/">Home</a></li>
                        <li class="<%= locals.request.path[1] == 'shop' ? 'active' : '' %>"><a href="/shop">Shop</a></li>
                        <li><a href="">Collection</a>
                            <ul class="dropdown">
                                <% locals.categories.forEach(category => { %>
                                    <li><a href="/shop/<%= category.name %> "><%= category.name %> </a></li>
                                <% }) %>
                            </ul>
                        </li>
                        <li class="<%= locals.request.path[1] == 'blog' ? 'active' : '' %>"><a href="/blog">Blog</a></li>
                        <li class="<%= locals.request.path[1] == 'contact' ? 'active' : '' %>"><a href="/contact">Contact</a></li>
                        <li><a style="cursor: pointer;">Pages</a>
                            <ul class="dropdown">
                                <li><a href="/cart">Shoping Cart</a></li>
                                <li><a href="/history">Order history</a></li>
                                <li><a href="/checkout">Checkout</a></li>
                                <li><a href="/faq">Faq</a></li>
                                <li><a href="/register">Register</a></li>
                                <li><a href="/login">Login</a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
                <div id="mobile-menu-wrap"></div>

            </div>
        </div>
    </header>
    <!-- End -->
    <% if (locals.request.path[1]!=='') { %>
        <div class="breadcrumb-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="breadcrumb-text">
                            <a href="/"><i class="fa-fa-home"></i>Home</a>
                            <span style="text-transform: capitalize;"><%= locals.request.path[1] %> </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
    
    <%- body %>
       <!-- Partner Logo Section Begin -->
       <div class="partner-logo">
        <div class="container">
            <div class="logo-carousel owl-carousel">
                <div class="logo-item">
                    <div class="tablecell-inner">
                        <img src="front/img/logo-carousel/logo-1.png" >
                    </div>
                </div>
                <div class="logo-item">
                    <div class="tablecell-inner">
                        <img src="front/img/logo-carousel/logo-2.png" >
                    </div>
                </div>
                <div class="logo-item">
                    <div class="tablecell-inner">
                        <img src="front/img/logo-carousel/logo-3.png" >
                    </div>
                </div>
                <div class="logo-item">
                    <div class="tablecell-inner">
                        <img src="front/img/logo-carousel/logo-4.png" >
                    </div>
                <div class="logo-item">
                    <div class="tablecell-inner">
                        <img src="front/img/logo-carousel/logo-5.png" >
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
    <!-- End -->

    <!-- ooter Section Begin-->

    <footer class="footer-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="footer-left">
                        <div class="footer-logo">
                            <a href="/">
                                <img src="front/img/footer-logo.png" height="25" alt="">
                            </a>
                        </div>
                        <ul>
                            <li>Thuy Dung - Thai Thuy - Thai Binh</li>
                            <li>Phone: +84 32.64.59.773</li>
                            <li>Email: vuvietquyacn@gmail.com</li>
                        </ul>
                        <div class="footer-social">
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-instagram"></i></a>
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-pinterest"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 offset-lg-1">
                    <div class="footer-widget">
                        <h5>Information</h5>
                        <ul>
                            <li><a href="">About Us</a></li>
                            <li><a href="/checkout">Checkout</a></li>
                            <li><a href="">Contact</a></li>
                            <li><a href="">Serivius</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="footer-widget">
                        <h5>My Account</h5>
                        <ul>
                            <li><a href="">My Account</a></li>
                            <li><a href="/contact">Contact</a></li>
                            <li><a href="/cart">Shopping Cart</a></li>
                            <li><a href="/shop">Shop</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-4">
                    <h5>Join Our Newsletter Now</h5>
                    <p>Get E-mail uppdates about our latest shop and special offers.</p>
                    <form action="#" class="subscribe-form">
                        <input type="text" placeholder="Enter your Mail">
                        <button type="button">Subscribe</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="copyright-reserved">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="copyright-text">
                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                            <script>document.write(new Date().getFullYear());</script>
                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                        </div>
                        <div class="payment-pic">
                            <img src="front/img/payment-method.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- End -->

    <!-- Js Plugins -->
    
    <script src="front/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>    
    <script src="front/js/owl.carousel.min.js"></script>
    <script src="front/js/main.js"></script>
</body>

</html>